//Launch the extension in a new window with the Extension Host
{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/build/src",
            "preLaunchTask": "npm" //Build before Launch
        }
    ]
}